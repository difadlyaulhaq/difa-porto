---
import amikom from "$assets/about/logos/amikom.png";
import bangkit from "$assets/about/logos/Bangkit.png";
import amcc from "$assets/about/logos/amcc.png";
import freelance from "$assets/about/logos/freelance.png";
import Role from "./Role.astro";
import type { ImageMetadata } from "astro";

let resume: Array<{
  company: string;
  title: string;
  logo: ImageMetadata;
  start: string | { label: string; dateTime: string };
  end: string | { label: string; dateTime: string };
}> = [
  {
    company: "Independent Freelancer",
    title: "Mobile Developer & web developer",
    logo: freelance,
    start: "2023",
    end: {
      label: "present",
      dateTime: new Date().getFullYear().toString(),
    },
  },
  {
    company: "Amikom Computer Club",
    title: "Human Resource Department",
    logo: amcc,
    start: "June 2024",
    end: {
      label: "present",
      dateTime: new Date().getFullYear().toString(),
    },
  },
  {
    company: "Bangkit 2024",
    title: "Machine Learning student",
    logo: bangkit,
    start: "Sept 2024",
    end: {
      label: "dec 2024",
      dateTime: new Date().getFullYear().toString(),
    },
  },
  {
    company: "Amikom Computer Club",
    title: "Head of Mobile Programming Division",
    logo: amcc,
    start: "Dec 2023",
    end: {
      label: "june 2024",
      dateTime: new Date().getFullYear().toString(),
    },
  },
  {
    company: "Amikom yogyakarta",
    title: "Bachelor informatics student",
    logo: amikom,
    start: "2022",
    end: {
      label: "present",
      dateTime: new Date().getFullYear().toString(),
    },
  },
];
---

<div class="rounded-3xl border p-6 dark:border-white/15 lg:mt-16 bg-zinc-950">
  <h2
    class="flex text-sm font-semibold text-base-900 dark:text-base-100 items-center"
  >
    <svg
      viewBox="0 0 24 24"
      fill="none"
      class="h-6 w-6 flex-none"
      aria-hidden="true"
    >
      <path
        d="M2.75 9.75a3 3 0 0 1 3-3h12.5a3 3 0 0 1 3 3v8.5a3 3 0 0 1-3 3H5.75a3 3 0 0 1-3-3v-8.5Z"
        class="fill-base-100 stroke-base-400 dark:fill-base-100/10 dark:stroke-base-500"
      ></path>
      <path
        d="M3 14.25h6.249c.484 0 .952-.002 1.316.319l.777.682a.996.996 0 0 0 1.316 0l.777-.682c.364-.32.832-.319 1.316-.319H21M8.75 6.5V4.75a2 2 0 0 1 2-2h2.5a2 2 0 0 1 2 2V6.5"
        class="stroke-base-400 dark:stroke-base-500"></path>
    </svg>
    <span class="ml-3">work & education</span>
  </h2>
  <ol class="mt-6 space-y-4">
    {resume.map((role) => <Role {role} />)}
  </ol>
</div>
